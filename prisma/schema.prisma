generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PREMIUM
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  bikes         Bike[]
  notifications Notification[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String?
  refresh_token     String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum BikeType {
  ROAD
  GRAVEL
  MTB
  OTHER
}

enum SyncStatus {
  synced
  syncing
  error
}

enum PartType {
  CHAIN
  CASSETTE
  PADS_FRONT
  PADS_REAR
  TIRE_FRONT
  TIRE_REAR
  CHAINRING_1X
  SUSPENSION_FORK
  DROPPER_POST
  TUBELESS_SEALANT
  HANDLEBAR_TAPE
  SUSPENSION_SEATPOST
}

enum ServiceType {
  CHAIN_LUBE
  CHAIN_REPLACE
}

model Bike {
  id      String   @id @default(cuid())
  userId  String
  name    String?
  brand   String?
  model   String?
  type    BikeType
  totalKm Int      @default(0)

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  parts            BikePart[]
  services         ServiceEvent[]
  partReplacements PartReplacement[]

  createdAt DateTime @default(now())
}

model BikePart {
  id     String   @id @default(cuid())
  bikeId String
  type   PartType

  wearKm     Int @default(0)
  expectedKm Int

  bike         Bike              @relation(fields: [bikeId], references: [id], onDelete: Cascade)
  replacements PartReplacement[]

  createdAt DateTime @default(now())
}

// ðŸ‘‡ NOWY MODEL - Historia wymian
model PartReplacement {
  id     String   @id @default(cuid())
  bikeId String
  partId String

  partType PartType
  brand    String?
  model    String?
  notes    String?

  kmAtReplacement Int // Przebieg roweru w momencie wymiany
  kmUsed          Int // Ile km przejechaÅ‚ komponent (wearKm w momencie wymiany)

  bike Bike     @relation(fields: [bikeId], references: [id], onDelete: Cascade)
  part BikePart @relation(fields: [partId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([bikeId, partType])
  @@index([partId])
}

model ServiceEvent {
  id       String      @id @default(cuid())
  bikeId   String
  type     ServiceType
  kmAtTime Int
  
  // ðŸ‘‡ DODANE: SzczegÃ³Å‚y smarowania
  lubricantBrand String?
  lubricantName  String?
  notes          String?

  bike Bike @relation(fields: [bikeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  
  @@index([bikeId, type])
}

enum NotificationType {
  PART_WORN
  PART_NEAR_WORN
  SERVICE_DUE
  EMAIL_MISSING
  SYSTEM
}

enum NotificationStatus {
  UNREAD
  READ
  DISMISSED
}

model Notification {
  id     String @id @default(cuid())
  userId String

  type    NotificationType
  title   String
  message String

  bikeId String?
  partId String?

  status NotificationStatus @default(UNREAD)

  createdAt DateTime  @default(now())
  readAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}