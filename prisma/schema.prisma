generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PREMIUM
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?
  weight        Int?      // Waga u偶ytkownika w kg - wa偶na dla opinii o oponach/dtkach (cinienie vs waga)
  role          UserRole  @default(USER)
  plan          Plan      @default(FREE)
  planExpiresAt DateTime? // Data wyganicia planu Premium
  bio           String?   @db.Text // Kr贸tki opis na profilu publicznym
  profileSlug    String?   @unique  // URL-friendly identyfikator profilu publicznego
  lastStravaSync DateTime?          // Ostatnia synchronizacja dystans贸w ze Strava
  accounts       Account[]
  sessions       Session[]
  bikes          Bike[]
  notifications  Notification[]
  partReviews    PartReview[]
  bikeComments   BikeComment[]
  commentReports CommentReport[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String? @db.Text
  refresh_token     String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum BikeType {
  ROAD
  GRAVEL
  MTB
  OTHER
}

enum SyncStatus {
  synced
  syncing
  error
}

enum PartType {
  // Rama i widelec
  FRAME
  FORK
  SUSPENSION_FORK

  // Stery i suport
  HEADSET
  BOTTOM_BRACKET

  // Napd
  CRANKSET
  CHAIN
  CASSETTE
  DERAILLEUR_FRONT
  DERAILLEUR_REAR
  SHIFTERS
  PEDALS
  CLEATS
  SHIFT_CABLES

  // Hamulce
  PADS_FRONT
  PADS_REAR
  DISC_FRONT
  DISC_REAR
  BRAKE_CABLES
  BRAKE_FLUID

  // Koa
  HUBS
  RIMS
  SPOKES
  TIRE_FRONT
  TIRE_REAR
  INNER_TUBE_FRONT
  INNER_TUBE_REAR
  TUBELESS_SEALANT

  // Kierownica i cockpit
  STEM
  HANDLEBAR
  HANDLEBAR_TAPE
  GRIPS

  // Siodo i sztyca
  SADDLE
  SEATPOST
  SUSPENSION_SEATPOST
  DROPPER_POST

  // Akcesoria
  FENDER_FRONT
  FENDER_REAR
  KICKSTAND
  RACK
  BAG_SADDLE
  BAG_FRAME
  BOTTLE_CAGE
  LIGHT_FRONT
  LIGHT_REAR
  BELL
  COMPUTER

  // Inne
  LUBRICANT

  // Przestarzae (zachowane dla kompatybilnoci z DB)
  CHAINRING_1X
  BRAKES
  BRAKE_LEVERS

  // E-bike
  MOTOR
  BATTERY
  CONTROLLER
}

enum ServiceType {
  CHAIN_LUBE
  CHAIN_REPLACE
}

model Bike {
  id           String   @id @default(cuid())
  userId       String
  stravaGearId String?  @unique // ID sprztu ze Strava - dla wykrywania duplikat贸w
  brand        String?
  model        String?
  year         Int?
  type         BikeType
  description  String?
  isElectric   Boolean  @default(false)
  totalKm      Int      @default(0)
  isPublic     Boolean  @default(false)  // Czy rower jest widoczny publicznie
  slug         String?  @unique          // URL-friendly identyfikator dla strony publicznej
  imageUrl     String?  @db.Text         // Zdjcie roweru (base64)

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  parts            BikePart[]
  services         ServiceEvent[]
  partReplacements PartReplacement[]
  comments         BikeComment[]

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([isPublic, type])
}

model BikePart {
  id     String   @id @default(cuid())
  bikeId String
  type   PartType

  wearKm     Int @default(0)
  expectedKm Int
  isInstalled Boolean @default(true) // Czy cz jest zamontowana (dla akcesori贸w)

  // Nowe pola dla globalnego systemu produkt贸w
  productId String? // Referencja do globalnego produktu
  installedAt DateTime? // Data monta偶u
  partSpecificData Json? // Specyficzne dane dla tej instancji czci

  bike         Bike              @relation(fields: [bikeId], references: [id], onDelete: Cascade)
  product      PartProduct?      @relation(fields: [productId], references: [id], onDelete: SetNull)
  replacements PartReplacement[]
  reviews      PartReview[]

  createdAt DateTime @default(now())

  @@unique([bikeId, type])
  @@index([bikeId])
  @@index([productId])
}

//  NOWY MODEL - Historia wymian
model PartReplacement {
  id     String   @id @default(cuid())
  bikeId String
  partId String

  partType  PartType
  productId String? // Snapshot productId
  brand     String?
  model     String?
  notes     String?

  kmAtReplacement Int // Przebieg roweru w momencie wymiany
  kmUsed          Int // Ile km przejecha komponent (wearKm w momencie wymiany)

  bike Bike     @relation(fields: [bikeId], references: [id], onDelete: Cascade)
  part BikePart @relation(fields: [partId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([bikeId, partType])
  @@index([partId])
  @@index([productId])
}

// Globalna baza produkt贸w (community-driven)
model PartProduct {
  id   String   @id @default(cuid())
  type PartType

  brand String
  model String

  // Metadane produktu (opcjonalne - rozbudowa w przyszoci)
  description      String?  @db.Text
  officialImageUrl String?
  officialPrice    Decimal? @db.Decimal(10, 2)

  // Agregowane statystyki (denormalizowane dla wydajnoci)
  averageRating      Float? @default(0)
  totalReviews       Int    @default(0)
  averageKmLifespan  Int?   @default(0)
  totalInstallations Int    @default(0)

  // Specyfikacja produktu (r贸偶na dla r贸偶nych typ贸w)
  specifications Json? // { width: 28, tubeless: true, ... }

  bikeParts           BikePart[]
  reviews             PartReview[]
  serviceEvents       ServiceEvent[]
  bikeProductDefaults BikeProductDefaultPart[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([type, brand, model])
  @@index([type, averageRating])
  @@index([brand])
}

// Opinie u偶ytkownik贸w o produktach (czci i smary)
model PartReview {
  id             String  @id @default(cuid())
  userId         String
  partId         String? // Opcjonalne - dla opinii o czciach
  serviceEventId String? // Opcjonalne - dla opinii o smarach
  productId      String

  rating     Int     // 1-5
  reviewText String? @db.Text

  // Kontekst u偶ytkowania
  kmAtReview Int      // Przebieg w momencie dodania opinii
  kmUsed     Int      // Ile km przejecha komponent / km od smarowania
  bikeType   BikeType // Typ roweru (kontekst)

  // Pros/Cons
  pros String[] @default([])
  cons String[] @default([])

  // Weryfikacja
  verified Boolean @default(true) // true jeli linked do rzeczywistego BikePart/ServiceEvent

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  part         BikePart?     @relation(fields: [partId], references: [id], onDelete: Cascade)
  serviceEvent ServiceEvent? @relation(fields: [serviceEventId], references: [id], onDelete: Cascade)
  product      PartProduct   @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, partId])
  @@unique([userId, serviceEventId])
  @@index([productId, rating])
  @@index([userId])
}

model ServiceEvent {
  id       String      @id @default(cuid())
  bikeId   String
  type     ServiceType
  kmAtTime Int

  lubricantBrand     String?
  lubricantProductId String?
  notes              String?

  bike             Bike         @relation(fields: [bikeId], references: [id], onDelete: Cascade)
  lubricantProduct PartProduct? @relation(fields: [lubricantProductId], references: [id], onDelete: SetNull)
  reviews          PartReview[]

  createdAt DateTime @default(now())

  @@index([bikeId, type, createdAt])
  @@index([lubricantProductId])
}

// Globalna baza modeli rower贸w (community-driven)
model BikeProduct {
  id       String   @id @default(cuid())
  bikeType BikeType

  brand String // np. "Cannondale", "Trek", "Specialized"
  model String // np. "Topstone Carbon LTD Di2", "Domane SL 7"

  // Przyszociowo: specyfikacja czci dla tego modelu
  specifications Json? // { "crankset": "Shimano GRX 820, 48/31", "bb": "Shimano BSA 68", ... }

  // Metadane (opcjonalne)
  description      String? @db.Text
  officialImageUrl String?
  year             Int? // rok modelowy

  defaultParts BikeProductDefaultPart[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([bikeType, brand, model])
  @@index([brand])
  @@index([bikeType])
}

// Domylne czci dla modelu roweru (specyfikacja fabryczna)
model BikeProductDefaultPart {
  id            String   @id @default(cuid())
  bikeProductId String
  partProductId String
  partType      PartType
  expectedKm    Int      // Mo偶e nadpisa domylny expectedKm dla tego roweru

  bikeProduct BikeProduct @relation(fields: [bikeProductId], references: [id], onDelete: Cascade)
  partProduct PartProduct @relation(fields: [partProductId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([bikeProductId, partType])
  @@index([bikeProductId])
  @@index([partProductId])
}

enum NotificationType {
  PART_WORN
  PART_NEAR_WORN
  SERVICE_DUE
  EMAIL_MISSING
  SYSTEM
  NEW_COMMENT    // Kto skomentowa Tw贸j rower
  COMMENT_REPLY  // Kto odpowiedzia na Tw贸j komentarz
}

enum NotificationStatus {
  UNREAD
  READ
  DISMISSED
}

model Notification {
  id     String @id @default(cuid())
  userId String

  type    NotificationType
  title   String
  message String

  bikeId    String?
  partId    String?
  commentId String?  // Referencja do komentarza (dla notyfikacji spoecznociowych)

  status NotificationStatus @default(UNREAD)

  createdAt DateTime  @default(now())
  readAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

// ========== Funkcje spoecznociowe ==========

enum CommentType {
  GENERAL    // Og贸lny komentarz
  SUGGESTION // Propozycja ulepszenia
  QUESTION   // Pytanie
}

model BikeComment {
  id       String      @id @default(cuid())
  bikeId   String
  userId   String
  parentId String?     // Dla odpowiedzi (nullable = komentarz g贸wny)
  content  String      @db.Text
  type     CommentType @default(GENERAL)
  isHidden Boolean     @default(false) // Soft-delete / ukryty przez moderacj

  bike    Bike          @relation(fields: [bikeId], references: [id], onDelete: Cascade)
  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent  BikeComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies BikeComment[] @relation("CommentReplies")
  reports CommentReport[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([bikeId, createdAt])
  @@index([userId])
  @@index([parentId])
}

enum ReportReason {
  SPAM
  OFFENSIVE
  IRRELEVANT
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWED
  DISMISSED
}

model CommentReport {
  id        String       @id @default(cuid())
  commentId String
  userId    String       // Kto zgosi
  reason    ReportReason
  details   String?      @db.Text
  status    ReportStatus @default(PENDING)

  comment BikeComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([commentId, userId]) // Jedno zgoszenie per u偶ytkownik per komentarz
  @@index([status])
}